{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "description": "For more information: http://aka.ms/cmakepresetsvs",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "SPS_BUILD_TESTING": "ON"
      }
    },
    {
      "name": "windows",
      "displayName": "Windows",
      "generator": "Ninja Multi-Config",
      "description": "Multiple configurations",
      "inherits": "base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "environment": {
          "CUSTOM_RUNTIME_PATH": "$env{PKG_ROOT}/ArtifactoryInstall/WindowsShared/bin;$env{PATH}"
      },
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "$env{PKG_ROOT}/ArtifactoryInstall/WindowsShared/lib/cmake/vtk",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
   {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Sets GCC",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
          "copyAdditionalIncludeDirectoriesList": [ "$env{HOME}/.vs/box2d-lite-actions/build/linux-debug/vcpkg_installed/x64-linux/include" ]
        }
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Sets release build type",
      "inherits": "linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "wasm-debug",
      "displayName": "Emscripten Debug",
      "inherits": "linux-debug",
      "toolchainFile": "/home/jmh/github/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
      "cacheVariables": {
          "VTK_DIR": "/home/jmh/github/VTKCMake/install/lib/cmake/vtk",
          "SPS_WRAP_JAVASCRIPT": "1",
          "SPS_WASM_DEBUGINFO": "READABLE_JS",
          "BUILD_SHARED_LIBS": "OFF"
      }
    },
    {
      "name": "wasm-release",
      "displayName": "Emscripten Release",
      "inherits": "wasm-debug",
      "cacheVariables": {
        "VTK_DIR": "/home/jmh/github/VTKCMake/install/lib/cmake/vtk",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
    "buildPresets": [
    {
      "name": "default-build-linux",
      "displayName": "Default",
      "configurePreset": "linux-debug",
      "description": "Vanilla build"
    },
    {
      "name": "release-build-linux",
      "displayName": "Release",
      "configurePreset": "linux-release",
      "description": "Vanilla build"
    },
    {
      "name": "verbose-build-linux",
      "displayName": "Verbose Build",
      "description": "Passes -v to Ninja",
      "configurePreset": "linux-debug",
      "nativeToolOptions": [ "-v" ]
    },
    {
      "name": "windows",
      "configurePreset": "windows"
    }
  ],
  "testPresets": [
    {
      "name": "core-test-linux",
      "description": "Enable output on failure",
      "configurePreset": "linux-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "core-test-windows",
      "inherits": "core-test-linux",
      "configurePreset": "windows",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "CUSTOM_RUNTIME_PATH": "$env{PKG_ROOT}/ArtifactoryInstall/WindowsShared/bin;$env{PATH}"
      },
      "execution": {
        "inheritEnvironments": ["env"],
        "args": ["-D", "${binaryDir}/ExternalData/Testing"]
      }
    }
  ]
}
